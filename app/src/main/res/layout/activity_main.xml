<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lightView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="20dp"
        android:text="Light Sensor: " />
    <TextView
        android:id="@+id/proximityView"
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Proximity Sensor: " />

    <TextView
        android:id="@+id/sensView"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:text="Sensitivity: 20.0" />

    <com.google.android.material.slider.Slider
        android:id="@+id/SensController"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="20"
        android:contentDescription="Sensitivity"
        android:valueTo="25"
        android:valueFrom="0"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <ToggleButton
        android:id="@+id/backgroundCheck"
        android:layout_width="wrap_content"
        android:paddingHorizontal="50dp"
        android:layout_height="wrap_content"
        android:textOn="Background Service: ON"
        android:textOff="Background Service: OFF"/>


</LinearLayout>