<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />
    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"/>
    <RadioGroup
        android:id="@+id/sensitivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp" >

        <RadioButton
            android:id="@+id/lowcheck"
            android:checked="true"
            android:layout_width="wrap_content"
            android:onClick="refresh"
            android:layout_height="wrap_content"
            android:text="Low Sensitivity" />
        <RadioButton
            android:id="@+id/medcheck"
            android:layout_width="wrap_content"
            android:onClick="refresh"
            android:layout_height="wrap_content"
            android:text="Medium Sensitivity" />
        <RadioButton
            android:id="@+id/highcheck"
            android:layout_width="wrap_content"
            android:onClick="refresh"
            android:layout_height="wrap_content"
            android:text="High Sensitivity" />
    </RadioGroup>

    <ToggleButton
        android:id="@+id/bgcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Background Service Enabled"
        android:textOff="Background Service Disabled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="400dp" />

</androidx.constraintlayout.widget.ConstraintLayout>